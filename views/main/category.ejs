<%-layout('layout')%>

<div class="container" style="margin-top: 4%">
    <div class="row">
        <% for(i = 0; i < products.length; i++) { %>
            <div class="col-sm-4">
                <a href="/product/<%=products[i]._id%>">
                    <div class="thumbnail">
                        <img src="<%=products[i].image%>">
                        <div class="caption">
                            <h3><%=products[i].name%></h3>
                            <p><%=products[i].category.name%></p>
                            <p>$<%=products[i].price%></p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>
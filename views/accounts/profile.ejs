<%- layout('layout') %>

<div class="container" style="margin-top: 50px">
    <div class="row">
        <div class="col-xs-6 col-sm-6  col-md-6">
            <img class="img-circle img-responsive img-center" src="<%=user.profile.picture%>" alt="">
            <br>
            <p>Name: <%=user.profile.name%></p>
            <p>Email: <%=user.email%></p>

            <% if(user.address ==='' ||  user.address === 'undefined') { %>
                <p><em style="color: #a2a2a2;">Address: You have no address</em></p>
            <% }else { %>
                <p>Address: <%=user.address%></p>
            <% } %>

            <a href="/edit-profile" class="btn btn-success">Edit Profile</a>
        </div>

        <div class="col-sm-6 col-md-6">
            <table class="table table-striped sticky -header">
                <caption class="text-center">Purchase History</caption>
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Paid</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i<user.history.length; i++) { %>
                        <tr>
                            <td><%=user.history[i].item.name%></td>
                            <td>$<%=user.history[i].paid%></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

